
button-size(w, h)
    width w
    height h

button-gradient()
    background -webkit-gradient(linear, left top, left bottom, from(#FFF),
    color-stop(0.01, #F1F1F1), color-stop(0.5, #F1F1F1), color-stop(0.99, #DFDFDF), to(#CCC))

button-shadow()
    -webkit-box-shadow: 1px 1px 2px #E7E7E7


button.login
    float left
    margin-right 10px
    button-size(130px, 45px)
    button-gradient()
    button-shadow()

button.regist
    float left
    margin-right 10px
    button-size(130px, 45px)
    button-gradient()
    button-shadow()
