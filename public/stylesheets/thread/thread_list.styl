my_black = #333
my_gray  = #BBB

ul#threadList
    li.thread
        width 100%
        border-bottom solid 1px #d8d8d8
        box-shadow 0px 2px 0px #FFF
        -webkit-box-shadow 0px 2px 0px #FFF

a
    text-decoration none

.thread
    padding : 15px 0

    > *
        margin 0 5px

    > p
        text-align left

    .thread_title
        margin-bottom 5px
        font-size 25px
        line-height 38px
        color my_black

    .thread_description
        font-size 15px
        line-height 25px
        color my_gray

