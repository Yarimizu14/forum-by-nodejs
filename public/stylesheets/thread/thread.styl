my_black = #333
my_gray  = #BBB

section-line() 
    border-bottom solid 1px #d8d8d8
    box-shadow 0px 2px 0px #FFF
    -webkit-box-shadow 0px 2px 0px #FFF


#thread
    padding 15px 0
    section-line()

    > p
        text-align center

    .thread_title
        font-size 25px
        line-height 38px
        color my_black

    .thread_description
        font-size 15px
        line-height 25px
        color my_black

    .thread_res
        font-size 14px
        line-height 28px
        color my_gray

ul#resList
    li.resList_each
        width 100%
        padding-bottom 10px
        section-line()

sub-height = 30px
.res

    > * 
        margin 0 5px

    .res_main
        margin-top 10px
        font-size 18px
        color my_black

    .res_sub
        margin-top 5px
        font-size 15px
        line-height sub-height
        color my_gray

        > li
            height sub-height

        .res_sub_name
        .res_sub_time
            float left
            margin-right 15px

        .res_sub_time
            font-size 12px

        .res_sub_favorite_num
        .res_sub_favorite
        .res_sub_del
            float right
            margin-right 10px

        .res_sub_favorite
            img.img_favorite
                vertical-align middle
                width sub-height - 8px

        .res_sub_del
            img.img_del
                vertical-align middle
                width sub-height - 10px

.resForm
    width 95%
    margin 20px auto 10px

button-size(w, h)
    width w
    height h

button-gradient()
    background -webkit-gradient(linear, left top, left bottom, from(#FFF),
    color-stop(0.01, #F1F1F1), color-stop(0.5, #F1F1F1), color-stop(0.99, #DFDFDF), to(#CCC))

button-shadow()
    -webkit-box-shadow: 1px 1px 2px #E7E7E7

button.resBtn
    display block
    margin 0 auto 20px
    button-size(100px, 30px)
    button-gradient()
    button-shadow()


