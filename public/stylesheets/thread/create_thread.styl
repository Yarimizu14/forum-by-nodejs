my_black = #333

.msg
    padding 10px 0 10px
    text-align center
    color my_black

.descriptionForm
    display block
    width 95%
    margin 0 auto 10px

.titleForm
    display block
    margin 0 auto
    width 90%

button-size(w, h)
    width w
    height h

button-gradient()
    background -webkit-gradient(linear, left top, left bottom, from(#FFF),
    color-stop(0.01, #F1F1F1), color-stop(0.5, #F1F1F1), color-stop(0.99, #DFDFDF), to(#CCC))

button-shadow()
    -webkit-box-shadow: 1px 1px 2px #E7E7E7

button.createBtn
    display block
    margin 0 auto
    button-size(100px, 30px)
    button-gradient()
    button-shadow()


